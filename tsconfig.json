{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "outDir": "./dist",
    "rootDir": ".",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "allowJs": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "noImplicitAny": false,
    "typeRoots": ["node_modules/@types"]
  },
  "filesGlob": [
    "*.ts"
  ],
  "exclude": [
    "node_modules", "dist"
  ],
  "compileOnSave": false
}
